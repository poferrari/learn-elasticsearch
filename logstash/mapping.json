{
    "index_patterns": ["br_pep-*"],
    "settings": {
        "number_of_shards": 1,
        "analysis": {           
            "analyzer": {
                "insensitive_analyzer": {
                    "tokenizer": "standard",
                    "filter": [
                        "lowercase",
                        "asciifolding"                        
                    ]
                }
            }
        }
    },
    "mappings": {
        "properties": {
            "Name": {
                "type": "text",
                "analyzer": "insensitive_analyzer",
                "fields": {
                    "keyword": {
                      "type": "keyword",
                      "ignore_above": 256
                    }
                  }
            },
            "CPF": {
                "type": "keyword",
                "ignore_above": 50
            },
            "StartDateExercise": {
                "type": "date"                
            }              
        }
    }
}